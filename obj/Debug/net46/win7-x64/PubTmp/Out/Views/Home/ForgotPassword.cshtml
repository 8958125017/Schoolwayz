
@model SchoolWayz.Cloud.Web.Controllers.ForgotPasswordViewModel
@{
}

<div id="login-wrapper">
  
    <div id="login-container">
        <span class="title">Enter your Valid EmailId or Phone Number</span>
        <form asp-action="ForgotPassword" method="post" asp-controller="Home">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="ui-g ui-fluid">
                <div class="ui-g-12">
                    <input asp-for="AuthenticationField" autocomplete="off" class="ui-inputtext ui-corner-all ui-state-default ui-widget" placeholder="Enter EmailId or Phone Number" />
                </div>

                <div class="ui-g-12">
                    <button type="submit" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-left">
                        <span class="ui-button-icon-left ui-c fa fa-fw ui-icon-person"></span>
                        <span class="ui-button-text ui-c">Submit</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}